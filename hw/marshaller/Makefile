### Makefile for the marshallertest project
### Generated by Bluespec Workstation on Tue Apr 16 18:27:08 EDT 2013

default: full_clean compile link simulate

.PHONY: compile
compile:
	@echo Compiling...
	bsc -u -sim -simdir bscdir -bdir bscdir -info-dir bscdir -keep-fires -aggressive-conditions -p .:%/Prelude:%/Libraries:%/Libraries/BlueNoC:./../ddr -g mkRowMarshallerTest  RowMarshallerTest.bsv 
	@echo Compilation finished

.PHONY: link
link:
	@echo Linking...
	bsc -e mkRowMarshallerTest -sim -o ./out -simdir bscdir -p bscdir:.:%/Prelude:%/Libraries:%/Libraries/BlueNoC:./../ddr -keep-fires 
	@echo Linking finished

.PHONY: simulate
simulate:
	@echo Simulation...
	./out 
	@echo Simulation finished

.PHONY: clean
clean:
	exec rm -f bscdir/DDR2.bo bscdir/RowMarshaller.bo

.PHONY: full_clean
full_clean:
	rm -f bscdir/DDR2.bo bscdir/RowMarshaller.bo
